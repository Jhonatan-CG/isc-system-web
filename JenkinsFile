pipeline {
    agent any
    tools {
        nodejs '20'
    }
    stages {
        stage('Install Xvfb') {
            steps {
                sh 'apt-get update && apt-get install -y xvfb'
            }
        }
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/Jhonatan-CG/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
           steps {
                sh 'npm install'
            }

        }
        stage('Cypress') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
}