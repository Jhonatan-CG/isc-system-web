pipeline {
    agent any
    tools {
        nodejs '20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/Jhonatan-CG/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
           steps {
                sh 'npm run build'
            }
        }
        stage('Start Server') {
            steps {
                sh 'nohup npm run dev &'
                sh 'sleep 10' // Give the server some time to start
            }
        }
        stage('Cypress Tests') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
    post {
        always {
            sh 'pkill -f "npm run dev"'
        }
    }
}