pipeline {
    agent any
    tools {
        nodejs '20'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh '''
                    apt-get update
                    apt-get install -y xvfb libgtk2.0-0 libgtk-3-0 libgbm-dev libnotify-dev libgconf-2-4 libnss3 libxss1 libasound2 libxtst6 xauth xvfb
                '''
            }
        }
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/Jhonatan-CG/isc-system-web.git'
            }
        }
        stage('Install Node Dependencies') {
            steps {
                sh 'npm ci'
            }
        }
        stage('Build') {
           steps {
                sh 'npm run build'
            }
        }
        stage('Cypress') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
}