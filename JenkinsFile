pipeline {
    agent any
    tools {
        nodejs '20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/Jhonatan-CG/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
           steps {
                script {
                    try {
                        sh 'npm run build'
                    } catch (err) {
                        echo "Build failed, but continuing with pipeline: ${err}"
                    }
                }
            }
        }
        stage('Start Server') {
            steps {
                sh 'nohup npm run dev &'
            }
        }
        stage('Cypress Tests') {
            steps {
                sh 'npx cypress run'
            }
        }
    }
}
