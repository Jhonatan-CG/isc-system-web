pipeline {
    agent any
    tools {
        nodejs '20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/Jhonatan-CG/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                script {
                    try {
                        sh 'npm run build'
                    } catch (err) {
                        echo "Build failed, but continuing with pipeline: ${err}"
                    }
                }
            }
        }
        stage('Start Server') {
            steps {
                // Inicia el servidor en segundo plano
                sh 'nohup npm run dev &'
                script {
                    sleep 20 // Espera para asegurarse de que el servidor esté en funcionamiento
                    // Verifica que el servidor esté corriendo
                    sh 'curl --retry 5 --retry-delay 5 --retry-connrefused http://localhost:5173/login'
                }
            }
        }
        stage('Install Cypress') {
            steps {
                // Asegúrate de que Cypress esté instalado
                sh 'npm install cypress --save-dev'
            }
        }
        stage('Cypress Tests') {
            steps {
                sh 'npx cypress run --headed --no-experimental-loader-warnings'
            }
        }
    }
}
